/*
This script selects the items from a database based on two user defined parameters
*/

SELECT  COUNTRY.COUNTRY,COUNTRY.NAME,MTRL.MTRL,MTRL.COUNTRY,MTRL.COMPANY,MTRL.CODE,MTRL.NAME,MTRL.PRICEW,
(SELECT ' '+MTRSUBSTITUTE.CODE+' '
FROM MTRSUBSTITUTE
WHERE MTRL.MTRL=MTRSUBSTITUTE.MTRL 
FOR XML PATH(''))[CODE1]
FROM MTRL,COUNTRY
WHERE (MTRL.PRICEW BETWEEN '{min}' AND '{max}') AND MTRL.COMPANY='{company}' AND MTRL.COUNTRY=COUNTRY.COUNTRY
